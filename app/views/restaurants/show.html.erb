<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<p>
  <strong>Phone Number:</strong>
  <%= @restaurant.phone_number %>
</p>

<h3>Reviews</h3>
<ul>
  <% @restaurant.reviews.each_with_index do |review, index| %>
    <li><%= index + 1 %>. <%= review.restaurant.name %> was <%= review.content %></li>
    <br>
  <% end %>
</ul>


<%= link_to "Add review", new_restaurant_review_path(@restaurant) %>
<%= link_to 'Back', restaurants_path %>
